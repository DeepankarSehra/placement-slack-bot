def alert(msg, channel="blog-updates"):
    try:
        response = client.chat_postMessage(
            channel = channel,
            text=f"<!channel> {msg}"
        )
    except SlackApiError as e:
        # You will get a SlackApiError if "ok" is False
        assert e.response["error"]    # str like 'invalid_auth', 'channel_not_found'

